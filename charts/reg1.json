{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/FranciscoSSoares/FranciscoSSoares.github.io/main/data/reg1.csv"
    },
    "height": 300,
    "width": 300,
    "title": {
      "text": "Relationship between Income Inequality and Happiness",
      "subtitle": "Source: World Bank and World Happiness Report",
      "subtitleFontStyle": "italic"
    },
    "layer": [
      {
        "mark": {"type": "point", "color": "limegreen"},
        "encoding": {
          "x": {
            "field": "Inequality",
            "title": "Gini Index",
            "type": "quantitative",
            "scale": {"domain": [20, 60]},
            "axis": {"domain": true}
          },
          "y": {
            "field": "Score",
            "title": "Happiness Score",
            "type": "quantitative",
            "scale": {"domain": [3, 8]}
          }
        }
      },
      {
        "mark": {"type": "line", "color": "black"},
        "transform": [
          {
            "regression": "Inequality",
            "on": "Score"
          }
        ],
        "encoding": {
          "x": {"field": "Inequality", "type": "quantitative"},
          "y": {
            "field": "Score",
            "type": "quantitative"
          },
         "tooltip": [
          {"field": "Inequality", "type": "nominal", "title": "Country"},
          {"field": "Score", "type": "quantitative", "title": "Score"}
        ]
        }
      },
      {
        "transform": [
          {
            "regression": "Inequality",
            "on": "Score",
            "params": true
          },
          {"calculate": "'RÂ²: '+format(datum.rSquared, '.5f')", "as": "R2"}
        ],
        "mark": {
          "type": "text",
          "color": "black",
          "x": "width",
          "align": "right",
          "y": -5
        },
        "encoding": {"text": {"type": "nominal", "field": "R2"}}
      }
    ]
  }